extends /layout

block content
	//-p= JSON.stringify(entry)
	section.artist-hero.imagebg.parallax.height-50(data-overlay)
		.background-image-holder
			img(src="#{asset(entry.artistPhoto)}")
	section.shift-up
		.container
			.row.text-center
				.col-sm-12
					img.artist-img.angle(src="#{asset(entry.artistPhoto)}")
				.col-sm-12.mt--1
					h3= entry.artistName
				.col-sm-12
					if entry.socialLinks != undefined
						ul.artist-social
							for item in entry.socialLinks
								li
									a(href="#{item.fields.url}" target="_blank")
										i.fa(class="fa-#{item.fields.site}")
			.row.text-center
					.col-sm-12.mt--1
						if entry.playing != undefined
							//-p= entry.playing.fields.timeSlot
							if entry.playing.fields.timeSlot != undefined
								- var date = new Date(entry.playing.fields.timeSlot)
								- var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
								- var days = ['',"Monday", "Tuesday", "Wednesday","Thursday", "Friday", "Saturday", "Sunday"]
								- var ampm = date.getHours() >= 12 ? 'PM' : 'AM'
								- var hours = date.getHours() >= 12 ? date.getHours() - 12 : date.getHours()
								- if (hours === 0){hours=12}
								- var minutes = date.getMinutes() < 10 ? '0' + date.getMinutes() : date.getMinutes()
								//-- console.log(date.getUTCHours())
								//-if (date.getUTCHours()) != 9
									h4= days[date.getDay()]
									h5= months[date.getMonth()] + ' ' + date.getDate() + ' - ' + hours + ':' + minutes + ' ' + ampm
								//-else
								h4= days[date.getDay()]
								h5= months[date.getMonth()] + ' ' + date.getDate() + ' - time TBA'
								//-if entry.playing.fields.location != undefined
									h5= entry.playing.fields.location
				if entry.bio != undefined
					.col-sm-12
						.md!= md(entry.bio)
